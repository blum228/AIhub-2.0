---
/**
 * Карточка блог-поста для списка статей
 * Requirements: 4.3, 4.4
 */
import Rounded from '../Rounded.astro';
import type { BlogPost } from '../../lib/blog';

interface Props {
  post: BlogPost;
}

const { post } = Astro.props;
const { title, coverImage } = post.data;
---

<article class="blog-card">
  <a href={`/blog/${post.slug}`} class="blog-card__link">
    {coverImage && (
      <Rounded class="blog-card__image-wrapper">
        <img
          src={coverImage}
          alt={title}
          class="blog-card__image"
          loading="lazy"
        />
      </Rounded>
    )}
    
    <div class="blog-card__content">
      <h3 class="blog-card__title">{title}</h3>
    </div>
  </a>
</article>

<style>
  .blog-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .blog-card__link {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    flex: 1;
  }

  .blog-card__image-wrapper {
    position: relative;
    overflow: hidden;
    background: rgb(var(--ids__surface-RGB));
    margin-bottom: 0.75em;
  }

  .blog-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .blog-card__content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .blog-card__title {
    font-size: 1.2em;
    font-weight: 600;
    margin: 0;
    line-height: 1.3;
    transition: color 0.2s ease;
  }

  .blog-card:hover .blog-card__title {
    color: rgb(var(--ids__link-RGB));
  }
</style>
