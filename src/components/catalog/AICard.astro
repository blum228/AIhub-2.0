---
/**
 * Карточка AI-инструмента в стиле IDS
 * Фото слева, название + ссылка справа вверху, цена внизу
 */
import Rounded from '../Rounded.astro';

interface Props {
  title: string;
  image: string;
  link?: string;
  price?: string;
  class?: string;
}

const { title, image, link, price = 'от 5$', class: className } = Astro.props;

// Извлекаем домен из ссылки
const siteName = link ? new URL(link).hostname.replace('www.', '').toUpperCase() : '';
---

<article class:list={['ai-card', className]}>
  <Rounded class="ai-card__image">
    <img src={image} alt={title} loading="lazy" />
  </Rounded>
  
  <div class="ai-card__content">
    <div class="ai-card__header">
      <h3 class="ai-card__title">{title}</h3>
      {link && (
        <a href={link} class="ai-card__link" target="_blank" rel="noopener noreferrer">
          {siteName}
        </a>
      )}
    </div>
    
    <div class="ai-card__price">{price}</div>
  </div>
</article>

<style>
  .ai-card {
    display: flex;
    gap: 1em;
    padding: 1em;
    background: rgb(var(--ids__surface-RGB));
    border-radius: var(--ids__radius, 0.5em);
  }

  .ai-card__image {
    flex-shrink: 0;
    width: 6em;
    height: 6em;
    overflow: hidden;
  }

  .ai-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-card__content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-width: 0;
  }

  .ai-card__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 0.5em;
  }

  .ai-card__title {
    margin: 0;
    font-size: 1.1em;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-card__link {
    flex-shrink: 0;
    font-size: 0.75em;
    padding: 0.3em 0.6em;
    border: 1px solid rgba(var(--ids__text-RGB), 0.3);
    border-radius: 0.3em;
    text-decoration: none;
    color: rgb(var(--ids__link-RGB));
    white-space: nowrap;
    transition: background-color 0.2s ease, border-color 0.2s ease;
  }

  .ai-card__link:hover {
    background-color: rgba(var(--ids__hover-RGB), 0.1);
    border-color: rgba(var(--ids__hover-RGB), 0.5);
  }

  .ai-card__price {
    font-size: 0.95em;
    font-weight: 500;
    color: rgba(var(--ids__text-RGB), 0.8);
  }
</style>
