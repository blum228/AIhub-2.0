---
/**
 * Карточка категории — крупная, выразительная
 */
interface Props {
  slug: string;
  title: string;
  description: string;
  icon: string;
  toolCount: number;
  index?: number;
}

const { slug, title, description } = Astro.props;
---

<a href={`/category/${slug}`} class="collection-card spotlight-card">
  <div class="spotlight-overlay"></div>
  <h3 class="collection-card__title">{title}</h3>
  <p class="collection-card__desc">{description}</p>
  <span class="collection-card__link">Смотреть →</span>
</a>

<style>
  .collection-card {
    position: relative;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    padding: 2em;
    min-height: 220px;
    background: rgb(var(--ids__surface-RGB));
    border-radius: 24px;
    transition: 
      background 0.3s ease,
      transform 0.3s ease;
    overflow: hidden;
  }
  
  .spotlight-overlay {
    position: absolute;
    inset: 0;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.3s ease;
    background: radial-gradient(
      600px circle at var(--mouse-x, 50%) var(--mouse-y, 50%),
      var(--spotlight-color, rgba(var(--ids__link-RGB), 0.15)),
      transparent 40%
    );
  }
  
  .collection-card:hover .spotlight-overlay {
    opacity: 1;
  }
  
  .collection-card:hover {
    background: rgba(var(--ids__text-RGB), 0.04);
    transform: translateY(-4px);
  }
  
  .collection-card__title {
    position: relative;
    font-size: 1.8em;
    font-weight: 700;
    margin: 0 0 0.4em;
    line-height: 1.15;
    letter-spacing: -0.02em;
    color: rgb(var(--ids__text-RGB));
  }
  
  .collection-card__desc {
    position: relative;
    font-size: 1em;
    line-height: 1.5;
    margin: 0;
    color: rgba(var(--ids__text-RGB), 0.55);
    flex: 1;
  }
  
  .collection-card__link {
    position: relative;
    font-size: 0.9em;
    font-weight: 500;
    color: rgba(var(--ids__text-RGB), 0.35);
    margin-top: 1.5em;
    transition: color 0.3s ease;
  }
  
  .collection-card:hover .collection-card__link {
    color: rgb(var(--ids__link-RGB));
  }
  
  @media (max-width: 767px) {
    .collection-card {
      padding: 1.5em;
      min-height: 180px;
    }
    
    .collection-card__title {
      font-size: 1.4em;
    }
  }
</style>

<script>
  function initSpotlight() {
    document.querySelectorAll('.spotlight-card').forEach(card => {
      card.addEventListener('mousemove', (e) => {
        const rect = (card as HTMLElement).getBoundingClientRect();
        const x = (e as MouseEvent).clientX - rect.left;
        const y = (e as MouseEvent).clientY - rect.top;
        (card as HTMLElement).style.setProperty('--mouse-x', `${x}px`);
        (card as HTMLElement).style.setProperty('--mouse-y', `${y}px`);
      });
    });
  }
  
  initSpotlight();
  document.addEventListener('astro:page-load', initSpotlight);
</script>
