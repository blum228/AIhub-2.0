---
import Rounded from '../Rounded.astro';

interface Props {
  slug: string;
  title: string;
  description: string;
  icon: string;
  toolCount: number;
  featured?: boolean;
}

const { slug, title, description, icon, toolCount, featured = false } = Astro.props;
---

<a href={`/category/${slug}`} class:list={['category-card', { 'category-card--featured': featured }]}>
  <Rounded class="category-card__inner">
    <div class="category-card__content">
      <h3 class="category-card__title">{title}</h3>
      <p class="category-card__description">{description}</p>
    </div>
    <span class="category-card__count">{toolCount}</span>
  </Rounded>
</a>

<style>
  .category-card {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .category-card :global(.category-card__inner) {
    display: flex;
    align-items: center;
    gap: calc(var(--ids__density) * 0.6em);
    padding: calc(var(--ids__density) * 0.6em) calc(var(--ids__density) * 0.8em);
    background: rgb(var(--ids__surface-RGB));
    height: 100%;
  }

  .category-card--featured :global(.category-card__inner) {
    background: rgb(var(--ids__surface-RGB));
    border: 1px solid rgba(var(--ids__text-RGB), 0.1);
  }

  .category-card__content {
    flex: 1;
    min-width: 0;
  }

  .category-card__title {
    font-size: 1.1em;
    font-weight: 600;
    margin: 0 0 0.2em;
    line-height: 1.2;
  }

  .category-card__description {
    font-size: 0.85em;
    opacity: 0.7;
    margin: 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .category-card__count {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 2em;
    height: 2em;
    padding: 0 0.5em;
    font-size: 0.9em;
    font-weight: 600;
    background: rgba(var(--ids__text-RGB), 0.1);
    border-radius: var(--ids__radius);
  }

  @media (max-width: 767px) {
    .category-card__description {
      display: none;
    }
  }
</style>
