---
import Rounded from '../Rounded.astro';

interface Props {
  slug: string;
  title: string;
  description: string;
  icon: string;
  toolCount: number;
  featured?: boolean;
}

const { slug, title, description, icon, toolCount, featured = false } = Astro.props;
---

<a href={`/category/${slug}`} class:list={['category-card', { 'category-card--featured': featured }]}>
  <Rounded class="category-card__inner">
    <h3 class="category-card__title">{title}</h3>
    <span class="category-card__count">{toolCount}</span>
  </Rounded>
</a>

<style>
  .category-card {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .category-card :global(.category-card__inner) {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1em;
    padding: 1em 1.25em;
    background: rgb(var(--ids__surface-RGB));
    height: 100%;
    transition: background 0.2s ease;
  }

  .category-card:hover :global(.category-card__inner) {
    background: rgba(var(--ids__surface-RGB), 0.7);
  }

  .category-card--featured :global(.category-card__inner) {
    border: 1px solid rgba(var(--ids__text-RGB), 0.1);
  }

  .category-card__title {
    font-size: 1.1em;
    font-weight: 600;
    margin: 0;
    line-height: 1.2;
    color: rgba(var(--ids__text-RGB), 0.6);
    transition: color 0.5s ease;
  }

  .category-card:hover .category-card__title {
    color: rgb(var(--ids__text-RGB));
    transition: color 0s ease;
  }

  .category-card__count {
    flex-shrink: 0;
    font-size: 0.85em;
    font-weight: 600;
    color: rgba(var(--ids__text-RGB), 0.6);
    transition: color 0.5s ease;
  }

  .category-card:hover .category-card__count {
    color: rgb(var(--ids__text-RGB));
    transition: color 0s ease;
  }
</style>
