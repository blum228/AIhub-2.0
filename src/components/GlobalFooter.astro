---
/**
 * Глобальный футер сайта
 * Минималистичный дизайн в стиле IDS
 * Requirements: 3.1, 3.2, 3.3, 3.4, 3.5, 9.1, 9.3, 9.4
 */
import { getCollection } from 'astro:content';
import Wrapper from './Wrapper.astro';
import { sortCollectionsByOrder, type CollectionData } from '../lib/collections';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;

// Get all collections for category links
const collectionsEntries = await getCollection('collections');
const collections: CollectionData[] = sortCollectionsByOrder(
  collectionsEntries.map(entry => ({
    slug: entry.slug,
    ...entry.data
  }))
);

const currentYear = new Date().getFullYear();

const navLinks = [
  { href: '/', label: 'Главная' },
  { href: '/catalog', label: 'Каталог' },
  { href: '/blog', label: 'Блог' },
  { href: '/about', label: 'О нас' }
];
---

<footer class:list={['global-footer', className]}>
  <Wrapper>
    <div class="global-footer__row">
      <span class="global-footer__brand">AI Catalog</span>
      <nav class="global-footer__links">
        {navLinks.map((link, i) => (
          <>
            {i > 0 && ' · '}
            <a href={link.href}>{link.label}</a>
          </>
        ))}
      </nav>
    </div>

    <div class="global-footer__row global-footer__row--secondary">
      <span class="global-footer__copy">© {currentYear} · 18+</span>
      <nav class="global-footer__links">
        {collections.map((col, i) => (
          <>
            {i > 0 && ' · '}
            <a href={`/category/${col.slug}`}>{col.title}</a>
          </>
        ))}
      </nav>
    </div>
  </Wrapper>
</footer>

<style>
  .global-footer {
    padding: calc(var(--ids__density) * 0.8em) 0;
    margin-top: auto;
  }

  .global-footer__row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1em;
  }

  .global-footer__row--secondary {
    margin-top: 0.5em;
    padding-top: 0.5em;
    border-top: 1px solid rgba(var(--ids__text-RGB), 0.1);
  }

  .global-footer__brand {
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .global-footer__copy {
    opacity: 0.4;
    font-size: 0.9em;
  }

  .global-footer__links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.3em;
    color: rgba(var(--ids__text-RGB), 0.4);
  }

  .global-footer__links a {
    color: rgba(var(--ids__text-RGB), 0.5);
    text-decoration: none;
    transition: color 0.5s ease;
  }

  .global-footer__links a:hover {
    color: rgb(var(--ids__text-RGB));
    transition: color 0s ease;
  }

  @media (max-width: 767px) {
    .global-footer__row {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5em;
    }

    .global-footer__row--secondary {
      margin-top: 0.8em;
      padding-top: 0.8em;
    }
  }
</style>
