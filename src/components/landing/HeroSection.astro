---
/**
 * Hero секция для landing page
 * Requirements: 1.1, 1.6, 2.1, 2.2, 2.3, 2.4
 */
import Wrapper from '../Wrapper.astro';
import TextWidth from '../TextWidth.astro';
import Space from '../Space.astro';

interface Props {
  headline?: string;
  description?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  headline = 'AI Каталог для СНГ',
  description = 'Лучшие AI-сервисы для ролеплея и генерации контента. Фильтры по оплате картами РФ, поддержке русского языка и доступности без VPN.',
  ctaText = 'Открыть каталог',
  ctaLink = '/catalog'
} = Astro.props;
---

<section>
  <Wrapper>
    <TextWidth>
      <Space size="XL" />
      <h1>{headline}</h1>
      <p class="loud">{description}</p>
      <Space size="M" />
      <a href={ctaLink}>{ctaText} →</a>
      <Space size="XL" />
    </TextWidth>
  </Wrapper>
</section>
