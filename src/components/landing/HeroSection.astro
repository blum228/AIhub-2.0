---
/**
 * Hero секция для landing page
 * Requirements: 1.1, 1.6, 2.1, 2.2, 2.3, 2.4
 */
import TextWidth from '../TextWidth.astro';
import Space from '../Space.astro';

interface Props {
  headline?: string;
  description?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  headline = 'AI Каталог для СНГ',
  description = 'Лучшие AI-сервисы для ролеплея и генерации контента. Фильтры по оплате картами РФ, поддержке русского языка и доступности без VPN.',
  ctaText = 'Открыть каталог',
  ctaLink = '/catalog'
} = Astro.props;
---

<section>
  <TextWidth>
    <Space size="XL" />
    <h1>{headline}</h1>
    <p class="loud">{description}</p>
    <Space size="M" />
    <a href={ctaLink} class="hero-button">{ctaText}</a>
    <Space size="XL" />
  </TextWidth>
</section>

<style>
  .hero-button {
    display: inline-block;
    padding: 0.6em 1.2em;
    background: rgb(var(--ids__text-RGB));
    color: rgb(var(--ids__background-RGB));
    text-decoration: none;
    border-radius: var(--ids__radius);
    font-weight: 500;
    transition: opacity 0.2s ease;
  }

  .hero-button:hover {
    opacity: 0.85;
    color: rgb(var(--ids__background-RGB));
  }
</style>
