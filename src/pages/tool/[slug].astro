---
import { getCollection } from 'astro:content';
import ToolLayout from '../../layouts/ToolLayout.astro';
import Rounded from '../../components/Rounded.astro';
import Space from '../../components/Space.astro';
import TextWidth from '../../components/TextWidth.astro';
import Breadcrumbs from '../../components/catalog/Breadcrumbs.astro';
import PaymentGuide from '../../components/catalog/PaymentGuide.astro';
import RelatedTools from '../../components/catalog/RelatedTools.astro';
import TelegramGuide from '../../components/catalog/TelegramGuide.astro';
import AccessInfo from '../../components/catalog/AccessInfo.astro';
import { TAGS_BY_ID, PRICE_MODEL_LABELS, type ToolData } from '../../lib/types';
import { getPrimaryCollection, sortCollectionsByOrder, type CollectionData } from '../../lib/collections';

export async function getStaticPaths() {
  const tools = await getCollection('tools');
  return tools.map(entry => ({
    params: { slug: entry.slug },
    props: { entry }
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// –î–∞–Ω–Ω—ã–µ –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–∞
const tool: ToolData = {
  slug: entry.slug,
  ...entry.data
};

// –í—Å–µ –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç—ã –¥–ª—è Related
const allToolsCollection = await getCollection('tools');
const allTools: ToolData[] = allToolsCollection.map(e => ({
  slug: e.slug,
  ...e.data
}));

// –ö–æ–ª–ª–µ–∫—Ü–∏–∏ –¥–ª—è breadcrumbs
const collectionsEntries = await getCollection('collections');
const collections: CollectionData[] = sortCollectionsByOrder(
  collectionsEntries.map(e => ({
    slug: e.slug,
    ...e.data
  }))
);

// –û–ø—Ä–µ–¥–µ–ª—è–µ–º primary collection –¥–ª—è breadcrumbs
const primaryCollection = getPrimaryCollection(tool, collections);

// Breadcrumbs items
const breadcrumbItems = [
  { label: '–ö–∞—Ç–∞–ª–æ–≥', href: '/catalog' },
  ...(primaryCollection ? [{ label: primaryCollection.title, href: `/category/${primaryCollection.slug}` }] : []),
  { label: tool.title }
];

const priceLabel = PRICE_MODEL_LABELS[tool.priceModel];
const tagLabels = tool.tags.map(id => TAGS_BY_ID[id]?.label || id);

// Schema.org BreadcrumbList
const siteUrl = Astro.site?.toString() || 'https://ai-catalog.ru';
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "–ì–ª–∞–≤–Ω–∞—è", "item": siteUrl },
    { "@type": "ListItem", "position": 2, "name": "–ö–∞—Ç–∞–ª–æ–≥", "item": `${siteUrl}/catalog` },
    ...(primaryCollection ? [{
      "@type": "ListItem",
      "position": 3,
      "name": primaryCollection.title,
      "item": `${siteUrl}/category/${primaryCollection.slug}`
    }] : []),
    {
      "@type": "ListItem",
      "position": primaryCollection ? 4 : 3,
      "name": tool.title
    }
  ]
};
---

<ToolLayout tool={tool}>
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  
  <Breadcrumbs items={breadcrumbItems} />
  <Space size="S" />
  
  <article class="tool-page">
    <!-- Header -->
    <header class="tool-page__header">
      <Rounded radius="1.5em" class="tool-page__cover">
        <img
          src={tool.coverImage}
          alt={tool.title}
          class:list={['tool-page__image', { 'nsfw-image': tool.isNsfw }]}
        />
      </Rounded>

      <div class="tool-page__info">
        <h1>{tool.title}</h1>
        <p class="tool-page__description">{tool.shortDescription}</p>

        <div class="tool-page__meta">
          <span class:list={['tool-page__badge', `tool-page__badge--${tool.priceModel}`]}>
            {priceLabel}
          </span>
          {tool.rating !== undefined && (
            <span class="tool-page__rating">‚≠ê {tool.rating.toFixed(1)}</span>
          )}
          {tool.supportsRussian && (
            <span class="tool-page__feature">üá∑üá∫ –†—É—Å—Å–∫–∏–π</span>
          )}
          {!tool.requiresVpn && (
            <span class="tool-page__feature">‚úì –ë–µ–∑ VPN</span>
          )}
          {tool.acceptsRussianCards && (
            <span class="tool-page__feature">üí≥ –ö–∞—Ä—Ç—ã –†–§</span>
          )}
        </div>

        <div class="tool-page__tags">
          {tagLabels.map(tag => (
            <span class="tool-page__tag">{tag}</span>
          ))}
        </div>

        <a href={tool.affiliateLink} class="tool-page__cta" target="_blank" rel="noopener sponsored">
          –ü–µ—Ä–µ–π—Ç–∏ –∫ —Å–µ—Ä–≤–∏—Å—É ‚Üí
        </a>

        {tool.tags.includes('telegram-bot') && tool.telegramBotLink && (
          <a href={tool.telegramBotLink} class="tool-page__telegram" target="_blank" rel="noopener">
            –û—Ç–∫—Ä—ã—Ç—å –≤ Telegram
          </a>
        )}
      </div>
    </header>

    <Space size="L" />

    <!-- Content -->
    <TextWidth>
      <section class="tool-page__content prose">
        <Content />
      </section>
    </TextWidth>

    <Space size="M" />

    <!-- Telegram Guide (for telegram bots) -->
    {tool.tags.includes('telegram-bot') && tool.telegramBotLink && (
      <>
        <TelegramGuide botLink={tool.telegramBotLink} botName={tool.title} />
        <Space size="M" />
      </>
    )}

    <!-- Access Info -->
    <AccessInfo
      requiresVpn={tool.requiresVpn}
      acceptsRussianCards={tool.acceptsRussianCards}
      paymentMethods={tool.paymentMethods}
      supportsRussian={tool.supportsRussian}
    />

    <Space size="M" />

    <!-- Payment Guide -->
    <PaymentGuide
      acceptsRussianCards={tool.acceptsRussianCards}
      paymentMethods={tool.paymentMethods}
    />

    <Space size="M" />

    <!-- FAQ -->
    {tool.faq && tool.faq.length > 0 && (
      <section class="tool-page__faq">
        <h2>–ß–∞—Å—Ç–æ –∑–∞–¥–∞–≤–∞–µ–º—ã–µ –≤–æ–ø—Ä–æ—Å—ã</h2>
        <Space size="S" />
        <dl class="faq-list">
          {tool.faq.map(item => (
            <div class="faq-item">
              <dt>{item.question}</dt>
              <dd>{item.answer}</dd>
            </div>
          ))}
        </dl>
      </section>
    )}

    <Space size="M" />

    <!-- Related -->
    <RelatedTools currentTool={tool} allTools={allTools} />
  </article>
</ToolLayout>

<style>
  .tool-page__header {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: calc(var(--ids__density) * 1.5em);
    align-items: start;
  }

  @media (max-width: 767px) {
    .tool-page__header {
      grid-template-columns: 1fr;
    }
  }

  .tool-page__cover {
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .tool-page__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: filter 0.3s ease;
  }

  :global(.safe-mode) .nsfw-image {
    filter: blur(20px);
  }

  .tool-page__description {
    opacity: 0.8;
    margin-bottom: calc(var(--ids__density) * 0.5em);
  }

  .tool-page__meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5em;
    margin-bottom: calc(var(--ids__density) * 0.5em);
  }

  .tool-page__badge {
    padding: 0.3em 0.7em;
    font-size: 0.85em;
    font-weight: 500;
    border-radius: 0.3em;
    background: rgba(0, 0, 0, 0.1);
  }

  .tool-page__badge--free {
    background: rgba(0, 150, 0, 0.15);
    color: rgb(0, 120, 0);
  }

  .tool-page__badge--freemium {
    background: rgba(0, 100, 200, 0.15);
    color: rgb(0, 80, 160);
  }

  .tool-page__badge--paid {
    background: rgba(200, 100, 0, 0.15);
    color: rgb(160, 80, 0);
  }

  .tool-page__rating,
  .tool-page__feature {
    padding: 0.3em 0.7em;
    font-size: 0.85em;
    background: rgb(var(--ids__surface-RGB));
    border-radius: 0.3em;
  }

  .tool-page__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4em;
    margin-bottom: calc(var(--ids__density) * 0.8em);
  }

  .tool-page__tag {
    font-size: 0.85em;
    padding: 0.3em 0.7em;
    background: rgb(var(--ids__surface-RGB));
    border-radius: 0.3em;
  }

  .tool-page__cta {
    display: inline-block;
    padding: 0.7em 1.5em;
    font-size: 1em;
    font-weight: 600;
    background: rgb(var(--ids__link-RGB));
    color: white;
    text-decoration: none;
    border-radius: 0.5em;
    transition: background 0.2s;
  }

  .tool-page__cta:hover {
    background: rgb(var(--ids__hover-RGB));
    color: white;
  }

  .tool-page__telegram {
    display: inline-block;
    margin-left: 0.5em;
    padding: 0.7em 1.5em;
    font-size: 1em;
    background: #0088cc;
    color: white;
    text-decoration: none;
    border-radius: 0.5em;
    transition: background 0.2s;
  }

  .tool-page__telegram:hover {
    background: #006699;
    color: white;
  }

  .faq-list {
    margin: 0;
  }

  .faq-item {
    padding: calc(var(--ids__density) * 0.6em);
    background: rgb(var(--ids__surface-RGB));
    border-radius: var(--ids__radius);
    margin-bottom: 0.5em;
  }

  .faq-item dt {
    font-weight: 600;
    margin-bottom: 0.5em;
  }

  .faq-item dd {
    margin: 0;
    opacity: 0.9;
  }
</style>
